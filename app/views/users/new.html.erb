<h1>Join bcmets</h1>

<p>Enter your name and email address below.  You will get an email asking you to confirm.</p>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.submit 'Sign up' %>
  </p>
<% end %>
