- if !@dates.blank?
  %p
    = @article_count
    articles.
    = link_to 'View in thread order', archive_month_path(:year => @year, :month => @month)
  - for date in @dates
    %h2
      = date.strftime("%a %b #{date.day.ordinalize}")
    %ul.bydate
      - for article in @articles[date]
        %li
          = link_to h(article.subject), article, :class => "subject"
          %small
            = link_to(h(article.from), :action => "author", :email => article.email)
            ,
            = article.received_at.to_s(:short)
- else
%p
  No articles.
