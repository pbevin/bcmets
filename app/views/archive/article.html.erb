<% if @article.recent? -%>
<%= link_to "Reply to the list", article_reply_path(@article), :id => "reply" -%>
<% end -%>
<div id="header">
	<ul>
		<li id="from">From: <%= auto_link(h(@article.from)) %></li>
		<li id="date">Date: <%= @article.sent_at %></li>
	</ul>
</div>
<div id="body">
	<%= to_html @article.body %>
</div>