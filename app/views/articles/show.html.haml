- if @article.recent?
  = link_to "Reply to this message", article_reply_path(@article), :id => "reply"
#header
  = profile_picture(@article.user) if @article.user
  %ul
    %li#from
      From:
      = from_linked(@article)
    %li#date
      Date:
      = @article.sent_at.strftime("%B %d, %Y, %H:%M:%S")
      = "(#{time_ago_in_words(@article.sent_at)} ago)"
#body
  = to_html @article.body
  - if @conversation_roots
    %div.thread
      %h2 Articles in this thread
      %ul.conversation
        = thread_as_html(@conversation_roots)