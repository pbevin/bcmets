<% title "Donations" %>

<p><%= link_to "New Donation", "javascript:;", :id => "new_donation_link" %></p>

<div id="new_donation_form">
  <%= render :partial => "form" %>
</div>

<table>
  <tr>
    <th>Email</th>
    <th>Amount</th>
    <th>Date</th>
  </tr>
  <% for donation in @donations %>
    <tr>
      <td><%=h donation.email %></td>
      <td><%=h donation.amount %></td>
      <td><%=h donation.date %></td>
      <td><%= link_to "Edit", edit_donation_path(donation) %></td>
      <td><%= link_to "Destroy", donation, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<script type="text/javascript">
  $(function() {
    $('#new_donation_link').click(function() {
      $('#new_donation_form').toggle("slow");
    });
  });
</script>
