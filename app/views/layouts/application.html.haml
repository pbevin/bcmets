!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en" }
  %head
    %title
      BCMets.org - 
      = @title || "Metastatic Breast Cancer"
    - if not @indexable
      %meta{ :name => "robots", :content => "noindex, nofollow" }
    %meta{"http-equiv" => "Content-type", :content => "text/html;charset=UTF-8"}
    = javascript_include_tag :all, :cache => true
    = stylesheet_link_tag "bcmets", "forms", :cache => true
    = yield(:head)
  %body
    #wrap
      #usernav
        - if current_user
          Logged in as
          = link_to(current_user.name, user_path(:current))
          |
          = link_to('Logout', logout_path)
      #pageheader
        #banner
          %a{ :href => "/" }
            %img{ :src => "/images/bcmets-header.png", :height => "120", :alt => "home page", :width => "950" }
        #searchform
          - form_tag({ :controller => 'archive', :action => 'search' }, :method => 'get') do
            %fieldset
              = text_field_tag :q, params[:q], :size => 10
              = submit_tag "Search"
      #main
        - if @heading
          %h1= @heading
        - if flash[:notice]
          #notice
            = flash[:notice]
            - if flash[:links]
              %p From here you can go to:
              %ul
              - for text, url in flash[:links]
                %li
                  = link_to(text, url) 
        = yield
      #sidebar
        %h3 Links
        #links
          %ul
            - if !current_user
              %li
                %strong
                  = link_to('Join bcmets', new_user_path)
              %li
                = link_to('Login', login_path)
            - for link in all_links
              %li
                = link_to link.title, link.url
                - if link.text
                  = link.text
            %li
              %a{ :href => "/post" }
                Post a new message
        
        %h3 Donations
        %ul
          %li
            = last_donation
          %li
            = donations_this_month
          %li
            = donations_this_year
          %li
            Please
            %a{ :href => "/donate" }
              donate
            to help keep this service running.

      #footer
        %p
          This archive is owned and operated by
          = link_to "Pete Bevin", "http://www.petebevin.com"
          \. Please read the
          = link_to "disclaimer", "/pages/disclaimer"
          and
          = link_to "privacy policy", "/pages/privacy"
          \.
          %a{ :href => "http://validator.w3.org/check/referer" }
            %small
              [Validate HTML]


